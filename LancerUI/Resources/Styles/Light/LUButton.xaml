<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--【Default】-->
    <!--边框色-->
    <SolidColorBrush x:Key="DefaultBtnBorderBrush" Color="#ecefef" />
    <!--背景色-->
    <SolidColorBrush x:Key="DefaultBtnBgBrush" Color="#FEFFFF" />
    <!--前景色-->
    <SolidColorBrush x:Key="DefaultBtnForegroundBrush" Color="#3d3d3d" />
    <!--鼠标经过背景色-->
    <SolidColorBrush x:Key="DefaultBtnHoverBgBrush" Color="#fcfbfc" />


    <!--【Primary】-->
    <SolidColorBrush x:Key="PrimaryBtnBorderBrush" Color="{DynamicResource ThemeColor}" Opacity=".7"/>
    <!--鼠标经过背景色-->
    <SolidColorBrush x:Key="PrimaryBtnHoverBgBrush" Color="{DynamicResource ThemeColor}" Opacity=".65" />
    <!--前景色-->
    <SolidColorBrush x:Key="PrimaryBtnForegroundBrush" Color="#fff" />

    <!--【Danger】-->
    <!--背景色-->
    <SolidColorBrush x:Key="DangerBtnBgBrush" Color="{DynamicResource DangerColor}" />
    <SolidColorBrush x:Key="DangerBtnBorderBrush" Color="{DynamicResource DangerColor}" Opacity=".7"/>
    <SolidColorBrush x:Key="DangerBtnForegroundBrush" Color="#fff" />
    <!--鼠标经过背景色-->
    <SolidColorBrush x:Key="DangerBtnHoverBgBrush" Color="{DynamicResource DangerColor}" Opacity=".65" />

</ResourceDictionary>